const http = require('http');

const port = {{ net_worth_service_port }};

const server = http.createServer((req, res) => {
  res.statusCode = 200;
  res.setHeader('Content-Type', 'text/plain');
  res.end('Deploy net-worth via travis-ci\n');
});

server.listen(port, () => {
  console.log(`net-worth hello world running at http://localhost:${port}/`);
});
